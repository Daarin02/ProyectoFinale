<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomChino_ComidaChina.MainPage"
             BackgroundColor="#CC9900">

    <ScrollView>
        
        <VerticalStackLayout
        Spacing="10"
        Padding="30"
        VerticalOptions="Center"
        BackgroundColor="#CC9900">

            <Image
Source="tom.png"
HeightRequest="500"
HorizontalOptions="Center" />

            <Label
            Text="Tom Chino"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="40"
            FontFamily="china"
            HorizontalOptions="Center" />

            <Button
x:Name="btnOrdenar"
Text="Ordenar"
FontFamily="china"
Clicked="btnOrdenar_Clicked"
BackgroundColor="#B22222"
FontSize="30"
TextColor="White"
CornerRadius="8"
Margin="0,10,0,10"/>

            <Button
x:Name="btnOrders"
Text="Ver Pedidos"
FontFamily="china"
Clicked="btnOrders_Clicked"
BackgroundColor="#B22222"
FontSize="30"
TextColor="White"
CornerRadius="8"
Margin="0,10,0,10"/>


         


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
